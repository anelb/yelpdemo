	<div class="row">
	<div class="col-md-2">
		<%= image_tag @restaurant.image_url %>
		<h2>
		  <%= @restaurant.name %>
		</h2>
		<div class="star-rating" data-score=<%= @avg_rating %>></div>
		<p><%= "#{@reviews.length} reviews	" %></p>
		<p>
		  <strong>Address:</strong>
		  <%= @restaurant.address %>
		</p>

		<p>
		  <strong>Phone:</strong>
		  <%= @restaurant.phone %>
		</p>

		<p>
		  <strong>Website:</strong>
		  <%= link_to @restaurant.website, @restaurant.website %>
		</p>
		<%= link_to 'Edit', edit_restaurant_path(@restaurant), class: 'btn btn-link' %> |
		<%= link_to 'Back', restaurants_path, class: 'btn btn-link' %>
		<p><%= link_to 'Write Review',  new_restaurant_review_path(@restaurant), 
									 class: 'btn btn-primary' %></p>		 
	</div>
	<div class="col-md-10">
		<% if @reviews.blank? %>
			<h3>No reviews yet. Be the first to write one.</h3>
		<% else %>
			<table class="table">
				<thead>
					<tr>
						<th class='col-md-2'></th>
						<th class='col-md-10'></th>
					</tr>
				</thead>
				<tbody>
					<% @reviews.each do |review| %>
						<tr>
							<td>
								<h4>
									<%= "#{review.user.first_name.capitalize} 
										 #{review.user.last_name.capitalize[0]}." %>
								</h4>
								<p><%= review.created_at.strftime("%d/%m/%-y") %></p>
								<p><%= review.created_at.strftime("%H:%M:%S") %></p>
							</td>
							<td>
								<div class="star-rating" 
									 data-score=<%= review.rating %>></div>
								<p><%= h(review.comment).
									   gsub(/\n/, '<br/>').html_safe %></p>
								<%= link_to 'Edit Review', 
									edit_restaurant_review_path(@restaurant, review) %> |
								<%= link_to 'Delete Review', 
									restaurant_review_path(@restaurant, review), 
									method: :delete %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		<% end %>
	</div>
</div>
<script>
	$('.star-rating').raty({
		path: 'https://s3.eu-central-1.amazonaws.com/yelpdemoba/Stars/',
		readOnly: true,
		score: function () {
			return $(this).attr('data-score');
		}
	});
</script>